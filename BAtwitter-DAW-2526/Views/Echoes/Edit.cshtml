@model BAtwitter_DAW_2526.Models.Echo

<h2 class="text-center mt-5">Modify Echo</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">

            <form method="post" enctype="multipart/form-data" asp-action="Edit" asp-controller="Echoes" asp-route-id="@Model.Id">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Content" class="form-label">Echo Content</label>
                    <br />
                    <textarea asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Att1">Attachment #1</label>
                    <input asp-for="Att1" class="form-control" type="file" />
                    <span asp-validation-for="Att1" class="text-danger"></span>
                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="Att2">Attachment #2</label>
                    <input asp-for="Att2" class="form-control" type="file" />
                    <span asp-validation-for="Att2" class="text-danger"></span>
                    <br />
                </div>
                
                <button class="btn btn-sm btn-success" type="submit">Modify Echo</button>

            </form>
            
        </div>
    </div>
</div>

