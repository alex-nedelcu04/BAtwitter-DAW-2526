<div class="d-flex flex-row justify-content-between mb-3">
    <form method="post" asp-controller="Echoes" asp-action="MarkAllDeletedAdmin" onclick="event.stopPropagation();">
        <button class="btn btn-warning" type="submit">Mark All Echoes as Deleted</button>
    </form>

    <form method="post" asp-controller="Echoes" asp-action="DeleteAllAdmin" onclick="event.stopPropagation();">
        <button class="btn btn-danger" type="submit">Permanently Delete All Echoes</button>
    </form>
</div>

@foreach (var echo in ViewBag.Echoes)
{
    <partial name="EchoInfo" model="echo" />
}


