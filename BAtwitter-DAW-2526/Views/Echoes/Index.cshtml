

<h2 class="text-center">Main Feed</h2>

<br />

@if(ViewBag.Message != null){

    <h2 class="p-3 rounded-3 text-center mb-5 alert @ViewBag.Type">@ViewBag.Message</h2>
}

<br />


@foreach (var echo in ViewBag.Echoes)
{
    @if (echo.CommParentId == null)
    {
        <partial name="EchoInfo" model="echo" />
    }
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.echo-card').forEach(function (card) {
                card.addEventListener('click', function (e) {

                    // se duce pe link doar daca este apasata postarea
                    if (e.target.closest('a, button')) {
                        return;
                    }

                    const url = card.getAttribute('data-echo-url');
                    if (url) {
                        window.location.href = url;
                    }
                });
            });
        });
    </script>
}

