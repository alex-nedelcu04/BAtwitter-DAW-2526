@if (ViewBag.FeedItems != null)
{
    @foreach (var item in ViewBag.FeedItems)
    {
        var echo = item.Item1;
        var reboundUser = item.Item2;
        
        @if (echo.CommParentId == null)
        {
            @if (reboundUser != null)
            {
                <div class="mb-2 text-muted small ps-3">
                    <i class="bi bi-arrow-repeat"></i> 
                    @if (reboundUser.ApplicationUser != null)
                    {
                        <a href="@Url.Action("Show", "UserProfiles", new { username = reboundUser.ApplicationUser.UserName })" class="text-decoration-none fw-semibold">
                            @reboundUser.ApplicationUser.UserName
                        </a>
                    }
                    else
                    {
                        <span class="fw-semibold">@reboundUser.DisplayName</span>
                    }
                    rebounded
                </div>
            }
            <partial name="EchoInfo" model="echo" />
        }
    }
}
else if (ViewBag.Echoes != null)
{
    @foreach (var echo in ViewBag.Echoes)
    {
        @if (echo.CommParentId == null)
        {
            <partial name="EchoInfo" model="echo" />
        }
    }
}