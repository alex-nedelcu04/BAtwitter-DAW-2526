@model BAtwitter_DAW_2526.Models.UserProfile

@{
    string path = Context.Request.Path.Value ?? "";
    bool showRecent = !path.Contains("Users/");
    bool isIndexAdmin = path.Contains("UserProfiles/IndexAdmin");
    bool isShow = path.Contains("UserProfiles/Show");
    bool showLock = Model.AccountStatus.Equals("private") || (ViewBag.IsPrivateAccount != null && ViewBag.IsPrivateAccount == true);
}

<div class="card shadow-sm mb-4 userprofile-card" data-userprofile-url="@Url.Action("Show", "UserProfiles", new { username = Model.ApplicationUser?.UserName })" style="cursor: pointer;">
    <!-- BANNER -->
    @if (!string.IsNullOrEmpty(Model.BannerLink))
    {
        <div class="banner-container" style="width: 100%; height: 200px; overflow: hidden; background-color: #e0e0e0;">
            <a href="@Model.BannerLink" class="d-block w-100 h-100" onclick="event.stopPropagation();">
                <img src="@Model.BannerLink" alt="userprofile Banner" 
                     style="width: 100%; height: 100%; object-fit: cover;" />
            </a>
        </div>
    }
    else
    {
        <div class="banner-container" style="width: 100%; height: 200px; background-color: #e0e0e0;"></div>
    }

    <div class="card-body">
        
        <!-- PROFILE PICTURE AND NAME -->
        <div class="d-flex align-items-center justify-content-between mb-3" style="margin-top: -60px; position: relative; z-index: 1;">
            <div class="d-flex align-items-center">
                @if (!string.IsNullOrEmpty(Model.PfpLink))
                {
                    @if (Model.ApplicationUser != null)
                    {
                        <a href="@Url.Action("Show", "UserProfiles", new { username = Model.ApplicationUser.UserName })" onclick="event.stopPropagation();">
                            <img src="@Model.PfpLink" alt="userprofile Profile Picture"
                                 class="rounded-circle border border-4 border-white"
                                 style="width: 120px; height: 120px; object-fit: cover; background-color: white;" />
                        </a>
                    }
                    else
                    {
                        <a href="@Model.PfpLink" onclick="event.stopPropagation();">
                            <img src="@Model.PfpLink" alt="userprofile Profile Picture"
                                 class="rounded-circle border border-4 border-white"
                                 style="width: 120px; height: 120px; object-fit: cover; background-color: white;" />
                        </a>
                    }
                }
                else
                {
                    <div class="rounded-circle border border-4 border-white bg-secondary"
                         style="width: 120px; height: 120px; background-color: white;"></div>
                }

                <div class="ms-3 mt-5">
                    <h4 class="fw-bold mb-0 d-flex align-items-center gap-1">
                        @(Model.DisplayName)
                        @if (showLock) { <i class="bi bi-lock-fill fs-5"></i> }
                        <small class="h6 text-muted mb-0">@Model.Pronouns </small>
                    </h4>
                    <h5 class="text-muted mb-0"> @@@Model.ApplicationUser?.UserName</h5>
                </div>

                @if (isShow)
                {
                    <div class="ms-3 mt-4 fs-6 align-items-center">
                        @(ViewBag.FollowsCount)
                        <a class="fw-semibold text-decoration-none link-body-emphasis" asp-controller="UserProfiles" asp-action="Follows" asp-route-username="@Model.ApplicationUser!.UserName" onclick="event.stopPropagation();">following </a>
                        &bull; @(ViewBag.FollowersCount)
                        <a class="fw-semibold text-decoration-none link-body-emphasis" asp-controller="UserProfiles" asp-action="Followers" asp-route-username="@Model.ApplicationUser.UserName" onclick="event.stopPropagation();">followers </a>
                    </div>
                }
            </div>

            <div class="small text-muted text-end mt-5">
                <p class="mb-1">joined : @Model.JoinDate.ToString("MMM d, yyyy")</p>

            </div>
        </div>

        <!-- DESCRIPTION -->
        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <div class="mb-3 mt-2">
                <p class="text-muted mb-0">@Model.Description</p>
            </div>
        }

        @if (!Model.ApplicationUser!.UserName!.Equals("deleted"))
        {
            @if (isIndexAdmin && ViewBag.IsAdmin)
            {
                @if (Model.AccountStatus == "deleted")
                {
                    <div class="d-flex flex-row justify-content-end mt-3">
                        <form method="post" asp-controller="UserProfiles" asp-action="DeleteAdmin" asp-route-id="@Model.Id" onclick="event.stopPropagation();">
                            <button class="btn btn-danger" type="submit">Permanently Delete User Profile</button>
                        </form>
                    </div>
                }
                else
                {
                    <div class="d-flex flex-row justify-content-between mt-3">
                        <form method="post" asp-controller="UserProfiles" asp-action="Delete" asp-route-id="@Model.Id" onclick="event.stopPropagation();">
                            <button class="btn btn-warning" type="submit">Mark User Profile as Deleted</button>
                        </form>

                        <form method="post" asp-controller="UserProfiles" asp-action="DeleteAdmin" asp-route-id="@Model.Id" onclick="event.stopPropagation();">
                            <button class="btn btn-danger" type="submit">Permanently Delete User Profile</button>
                        </form>
                    </div>
                }
            }
            else if (Model.Id == ViewBag.CurrentUser && Model.AccountStatus != "deleted" && isShow)
            {
                <div class="d-flex flex-row justify-content-between mt-3">
                    <div class="d-flex gap-2">
                        @if (Model.Id == ViewBag.CurrentUser)
                        {
                            <a class="btn btn-success" asp-controller="UserProfiles" asp-action="Edit" asp-route-id="@Model.Id" onclick="event.stopPropagation();">Modify Profile</a>
                            <a class="btn btn-outline-primary" asp-controller="FollowRequests" asp-action="PendingUserRequests" onclick="event.stopPropagation();">
                                <i class="bi bi-envelope"></i> Requests
                            </a>
                        }
                    </div>
                    <form method="post" asp-controller="UserProfiles" asp-action="Delete" asp-route-id="@Model.Id" onclick="event.stopPropagation();">
                        <button class="btn btn-danger" type="submit">Delete Profile</button>
                    </form>
                </div>
            }
            else if (Model.Id != ViewBag.CurrentUser && Model.AccountStatus != "deleted" && !string.IsNullOrEmpty(ViewBag.CurrentUser) && isShow)
            {
                @if (ViewBag.IsAdmin)
                {
                    <!-- BUTON FOLLOW / BLOCK  -->
                    <div class="d-flex flex-row justify-content-between mt-3 gap-2">
                        <div class="d-flex gap-2">
                            @if (ViewBag.HasBlocked == true)
                            {
                                <!-- User is blocked - show unblock button -->
                                <form method="post" asp-controller="FollowRequests" asp-action="UnblockUser" asp-route-userIdToUnblock="@Model.Id" onclick="event.stopPropagation();">
                                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#unblockModal">
                                        <i class="bi bi-person-x"></i> Unblock
                                    </button>

                                    <div class="modal fade" id="unblockModal" tabindex="-1" aria-labelledby="unblockModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-body">
                                                    Are you sure you want to unblock @@@(Model.ApplicationUser.UserName)?
                                                </div>
                                                <div class="modal-footer d-flex justify-content-between">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-success">Unblock</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            }
                            else if (ViewBag.IsBlockedBy == true)
                            {
                                <!-- User has blocked you - no action buttons -->
                                <span class="text-muted"><i class="bi bi-lock-fill"></i> This user has blocked you</span>
                            }
                            else
                            {
                                <!-- Normal follow/unfollow buttons -->
                                @if (ViewBag.IsFollowing == true)
                                {
                                    <form method="post" asp-controller="FollowRequests" asp-action="UnfollowUser" asp-route-receiverUserId="@Model.Id" onclick="event.stopPropagation();">
                                        <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#unfollowModal">Following</button>

                                        <div class="modal fade" id="unfollowModal" tabindex="-1" aria-labelledby="unfolowModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-body">
                                                        Are you sure you want to unfollow @@@(Model.ApplicationUser.UserName)?
                                                    </div>
                                                    <div class="modal-footer d-flex justify-content-between">
                                                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">No</button>
                                                        <button type="submit" class="btn btn-success">Yes</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                }
                                else if (ViewBag.HasPendingRequest == true)
                                {
                                    <form method="post" asp-controller="FollowRequests" asp-action="CancelFollowRequest" asp-route-receiverUserId="@Model.Id" onclick="event.stopPropagation();">
                                        <button class="btn btn-warning" type="submit">Cancel Request</button>
                                    </form>
                                }
                                else if (Model.AccountStatus == "private")
                                {
                                    <!-- CONT PRIVAT-->
                                    <form method="post" asp-controller="FollowRequests" asp-action="SendFollowRequest" asp-route-receiverUserId="@Model.Id" onclick="event.stopPropagation();">
                                        <button class="btn btn-primary" type="submit">Follow</button>
                                    </form>
                                }
                                else
                                {
                                    <!-- CONT PUBLIC -->
                                    <form method="post" asp-controller="FollowRequests" asp-action="FollowDirect" asp-route-receiverUserId="@Model.Id" onclick="event.stopPropagation();">
                                        <button class="btn btn-primary" type="submit">Follow</button>
                                    </form>
                                }

                                <!-- Block button -->
                                <form method="post" asp-controller="FollowRequests" asp-action="BlockUser" asp-route-userIdToBlock="@Model.Id" onclick="event.stopPropagation();">
                                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#blockModal">
                                        <i class="bi bi-person-x"></i> Block
                                    </button>

                                    <div class="modal fade" id="blockModal" tabindex="-1" aria-labelledby="blockModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-body">
                                                    Are you sure you want to block @@@(Model.ApplicationUser.UserName)? You won't be able to see their content and they won't be able to see yours.
                                                </div>
                                                <div class="modal-footer d-flex justify-content-between">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-danger">Block</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            }
                        </div>
                        <div class="d-flex flex-row justify-content-between gap-2">
                            <form method="post" asp-controller="UserProfiles" asp-action="Delete" asp-route-id="@Model.Id" onclick="event.stopPropagation();">
                                <button class="btn btn-warning" type="submit">Mark User Profile as Deleted</button>
                            </form>

                            <form method="post" asp-controller="UserProfiles" asp-action="DeleteAdmin" asp-route-id="@Model.Id" onclick="event.stopPropagation();">
                                <button class="btn btn-danger" type="submit">Permanently Delete User Profile</button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <!-- BUTON FOLLOW / BLOCK  -->
                    <div class="d-flex flex-row justify-content-start mt-3 gap-2">
                        @if (ViewBag.HasBlocked == true)
                        {
                            <!-- User is blocked - show unblock button -->
                            <form method="post" asp-controller="FollowRequests" asp-action="UnblockUser" asp-route-userIdToUnblock="@Model.Id" onclick="event.stopPropagation();">
                                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#unblockModal">
                                    <i class="bi bi-person-x"></i> Unblock
                                </button>

                                <div class="modal fade" id="unblockModal" tabindex="-1" aria-labelledby="unblockModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                Are you sure you want to unblock @@@(Model.ApplicationUser.UserName)?
                                            </div>
                                            <div class="modal-footer d-flex justify-content-between">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-success">Unblock</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        }
                        else if (ViewBag.IsBlockedBy == true)
                        {
                            <!-- User has blocked you - no action buttons -->
                            <span class="text-muted"><i class="bi bi-lock-fill"></i> This user has blocked you</span>
                        }
                        else
                        {
                            <!-- Normal follow/unfollow buttons -->
                            @if (ViewBag.IsFollowing == true)
                            {
                                <form method="post" asp-controller="FollowRequests" asp-action="UnfollowUser" asp-route-receiverUserId="@Model.Id" onclick="event.stopPropagation();">
                                    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#unfollowModal">Following</button>

                                    <div class="modal fade" id="unfollowModal" tabindex="-1" aria-labelledby="unfolowModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-body">
                                                    Are you sure you want to unfollow @@@(Model.ApplicationUser.UserName)?
                                                </div>
                                                <div class="modal-footer d-flex justify-content-between">
                                                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-success">Unfollow</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            }
                            else if (ViewBag.HasPendingRequest == true)
                            {
                                <form method="post" asp-controller="FollowRequests" asp-action="CancelFollowRequest" asp-route-receiverUserId="@Model.Id" onclick="event.stopPropagation();">
                                    <button class="btn btn-warning" type="submit">Cancel Request</button>
                                </form>
                            }
                            else if (Model.AccountStatus == "private")
                            {
                                <!-- CONT PRIVAT-->
                                <form method="post" asp-controller="FollowRequests" asp-action="SendFollowRequest" asp-route-receiverUserId="@Model.Id" onclick="event.stopPropagation();">
                                    <button class="btn btn-primary" type="submit">Follow</button>
                                </form>
                            }
                            else
                            {
                                <!-- CONT PUBLIC -->
                                <form method="post" asp-controller="FollowRequests" asp-action="FollowDirect" asp-route-receiverUserId="@Model.Id" onclick="event.stopPropagation();">
                                    <button class="btn btn-primary" type="submit">Follow</button>
                                </form>
                            }

                            <!-- Block button -->
                            <form method="post" asp-controller="FollowRequests" asp-action="BlockUser" asp-route-userIdToBlock="@Model.Id" onclick="event.stopPropagation();">
                                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#blockModal">
                                    <i class="bi bi-person-x"></i> Block
                                </button>

                                <div class="modal fade" id="blockModal" tabindex="-1" aria-labelledby="blockModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                Are you sure you want to block @@@(Model.ApplicationUser.UserName)? You won't be able to see their content and they won't be able to see yours.
                                            </div>
                                            <div class="modal-footer d-flex justify-content-between">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Block</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                }
            }
        }

        @if (Model.AccountStatus == "deleted")
        {
            <small class="d-flex flex-row mt-3 mb-1 p-3 rounded-3 text-center justify-content-center alert alert-secondary text-muted fst-italic">
                This profile has been deleted.
            </small>
        }
    </div>
</div>
