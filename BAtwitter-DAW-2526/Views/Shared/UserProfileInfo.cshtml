@model BAtwitter_DAW_2526.Models.UserProfile

@{
    string path = Context.Request.Path.Value ?? "";
    bool showRecent = !path.Contains("Users/");

}

<div class="card shadow-sm mb-4 userprofile-card" data-userprofile-url="@Url.Action("Show", "UserProfiles", new { username = Model.ApplicationUser?.UserName })" style="cursor: pointer;">
    <!-- BANNER -->
    @if (!string.IsNullOrEmpty(Model.BannerLink))
    {
        <div class="banner-container" style="width: 100%; height: 200px; overflow: hidden; background-color: #e0e0e0;">
            <a href="@Model.BannerLink" class="d-block w-100 h-100" onclick="event.stopPropagation();">
                <img src="@Model.BannerLink" alt="userprofile Banner" 
                     style="width: 100%; height: 100%; object-fit: cover;" />
            </a>
        </div>
    }
    else
    {
        <div class="banner-container" style="width: 100%; height: 200px; background-color: #e0e0e0;"></div>
    }

    <div class="card-body">
        
        <!-- PROFILE PICTURE AND NAME -->
        <div class="d-flex align-items-center justify-content-between mb-3" style="margin-top: -60px; position: relative; z-index: 1;">
            <div class="d-flex align-items-center">
                @if (!string.IsNullOrEmpty(Model.PfpLink))
                {
                    @if (Model.ApplicationUser != null)
                    {
                        <a href="@Url.Action("Show", "UserProfiles", new { username = Model.ApplicationUser.UserName })" onclick="event.stopPropagation();">
                            <img src="@Model.PfpLink" alt="userprofile Profile Picture" 
                                 class="rounded-circle border border-4 border-white"
                                 style="width: 120px; height: 120px; object-fit: cover; background-color: white;" />
                        </a>
                    }
                    else
                    {
                        <a href="@Model.PfpLink" onclick="event.stopPropagation();">
                            <img src="@Model.PfpLink" alt="userprofile Profile Picture" 
                                 class="rounded-circle border border-4 border-white"
                                 style="width: 120px; height: 120px; object-fit: cover; background-color: white;" />
                        </a>
                    }
                }
                else
                {
                    <div class="rounded-circle border border-4 border-white bg-secondary" 
                         style="width: 120px; height: 120px; background-color: white;"></div>
                }
                
                <div class="ms-3 mt-5">
                    <h4 class="fw-bold mb-0">@Model.DisplayName  <small class="h6 text-muted mb-0">@Model.Pronouns </small></h4>
                    <h5 class="text-muted mb-0"> @@@Model.ApplicationUser?.UserName</h5>
                </div>
            </div>

            <div class="small text-muted text-end mt-5">
                <p class="mb-1">joined : @Model.JoinDate.ToString("MMM d, yyyy")</p>

            </div>


        </div>

        <!-- DESCRIPTION -->
        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <div class="mb-3 mt-2">
                <p class="text-muted mb-0">@Model.Description</p>
            </div>
        }

        @if ((Model.Id == ViewBag.CurrentUser || ViewBag.IsAdmin) && Model.AccountStatus != "deleted")
        {
            <div class="d-flex flex-row justify-content-between mt-3">
                @if (Model.Id == ViewBag.CurrentUser)
                {
                    <a class="btn btn-success" asp-controller="UserProfiles" asp-action="Edit" asp-route-id="@Model.Id" onclick="event.stopPropagation();">Modify Profile</a>
                }
                <form method="post" asp-controller="UserProfiles" asp-action="Delete" asp-route-id="@Model.Id" onclick="event.stopPropagation();">
                    <button class="btn btn-danger" type="submit">Delete Profile</button>
                </form>
            </div>
        }

        @if (Model.AccountStatus == "deleted")
        {
            <small class="d-flex flex-row mt-3 mb-1 p-3 rounded-3 text-center justify-content-center alert alert-secondary text-muted fst-italic">
                This profile has been deleted.
            </small>
        }
    </div>
</div>
