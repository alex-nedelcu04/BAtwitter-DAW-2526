@model BAtwitter_DAW_2526.Models.Echo
@using System.IO

@{
    string path = Context.Request.Path.Value ?? "";
    string typeComm = "comment", typeAmp = "amplifier";
    bool showButtons = path.Contains("Echoes/Show");

    // Check if current user has liked/rebounded this echo
    bool isLiked = false, isRebounded = false, isBookmarked = false;
    if (ViewBag.CurrentUser != null && Model.Interactions != null)
    {
        var inter = Model.Interactions!.FirstOrDefault(i => i.UserId == ViewBag.CurrentUser);
        if (inter != null)
        {
            isLiked = inter.Liked;
            isRebounded = inter.Rebounded;
            isBookmarked = inter.Bookmarked;
        }
    }
    bool showLock = Model.User!.AccountStatus.Equals("private");
}

@functions {
    bool IsBlocked(Echo echo)
    {
        if (ViewBag.CurrentUser == null || echo.User == null)
            return false;
        return echo.User.SentRelations.Any(rel => rel.ReceiverId == ViewBag.CurrentUser && rel.Type == -1);
    }
    
    bool CanViewEcho(Echo echo)
    {
        if (IsBlocked(echo))
            return false;
            
        return User.IsInRole("Admin") || echo.User!.AccountStatus.Equals("active")
           || ((echo.User!.AccountStatus.Equals("private") && echo.User!.ReceivedRelations.Any(rel => rel.SenderId == ViewBag.CurrentUser && rel.Type == 1)))
           || echo.UserId == ViewBag.CurrentUser;
    }
}

<div class="ms-4 mt-3">
    @if (Model.IsRemoved && !User.IsInRole("Admin"))
    {
        <small class="d-flex flex-row mt-3 p-3 rounded-3 text-center justify-content-center alert alert-secondary text-muted fst-italic">
            This Echo has been removed.
        </small>
    }
    else if (IsBlocked(Model) && !User.IsInRole("Admin"))
    {
        <small class="d-flex flex-row mt-3 mb-3 p-3 rounded-3 text-center align-items-center alert alert-secondary text-muted fst-italic">
            This Echo was sent from an account that has blocked you.
        </small>
    }
    else if (!CanViewEcho(Model) && !User.IsInRole("Admin"))
    {
        <small class="d-flex flex-row mt-3 mb-3 p-3 rounded-3 text-center align-items-center alert alert-secondary text-muted fst-italic">
            This Echo was sent from a private account you do not follow.
        </small>
    }
    else
    {
        <div class="card shadow-sm mb-4 comment-card" data-comment-url="@(Url.Action("Show", "Echoes", new { id = Model.Id })  + "#here")">
            <div class="card-body">

                <!-- HEADER: avatar + nume + username + edited at -->
                <div class="d-flex justify-content-between align-items-start">

                    <div class="d-flex align-items-center">
                        @if (Model.User != null && !string.IsNullOrEmpty(Model.User.PfpLink))
                        {
                            <img src="@Model.User.PfpLink" alt="Profile Picture" class="rounded-circle me-2"
                                 style="width: 48px; height: 48px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="rounded-circle bg-secondary me-2" style="width: 48px; height: 48px;"></div>
                        }

                        <div class="d-flex flex-column me-3">
                            <span class="fw-semibold d-flex align-items-center gap-1">
                                @(Model.User?.DisplayName ?? "Unknown user")
                                @if (showLock) { <i class="bi bi-lock-fill fs-6"></i> }
                            </span>

                            @if (Model.User?.ApplicationUser != null)
                            {
                                <small class="text-muted">
                                    @("@" + Model.User.ApplicationUser.UserName)
                                </small>
                            }
                        </div>

                        @if (Model.Flock != null)
                        {
                            <div class="d-flex flex-column me-3">
                                <small class="text-primary fw-semibold">
                                    <a href="@Url.Action("Show", "Flocks", new { id = Model.Flock.Id })" class="text-primary text-decoration-none fw-semibold">
                                        @Model.Flock.Name
                                    </a>
                                </small>
                            </div>
                        }

                        @if (Model.CommParent != null)
                        {
                            <div class="d-flex flex-column me-1">
                                replying to:
                            </div>
                            <div class="d-flex flex-column me-3">
                                <a href="@Url.Action("Show", "UserProfiles", new { username = Model.CommParent.User!.ApplicationUser!.UserName })" class="text-muted text-decoration-none">
                                    <small class="text-muted text-end">@("@" + Model.CommParent.User!.ApplicationUser!.UserName)</small>
                                </a>
                            </div>
                        }
                    </div>

                    <div class="text-end small text-muted">
                        @* "edited at" doar dacă a fost editat *@
                        @if (Model.DateEdited.HasValue && Model.DateEdited.Value > Model.DateCreated)
                        {
                            <div class="text-muted text-end">
                                edited at: @Model.DateEdited.Value.ToString("HH:mm") - @Model.DateEdited.Value.ToString("MMM d, yyyy")
                            </div>
                        }
                    </div>

                </div>

                <!-- TEXT POSTARE -->
                <div class="mb-3 mt-1 post-click-area">
                    @if (!string.IsNullOrWhiteSpace(Model.Content))
                    {
                        @Html.Raw(Html.Encode(Model.Content).Replace("\n", "<br />"))
                    }
                </div>

                <!-- ATAȘAMENTE -->
                @{
                    var attCount = Convert.ToInt32(!string.IsNullOrEmpty(Model.Att1)) + Convert.ToInt32(!string.IsNullOrEmpty(Model.Att2));
                }

                @if (attCount > 0)
                {
                    <div class="row g-3 mb-3 justify-content-center">

                        @* ATTACHMENT #1 *@
                        @if (!string.IsNullOrEmpty(Model.Att1))
                        {
                            var ext1 = System.IO.Path.GetExtension(Model.Att1).ToLower();
                            var isImg1 = new[] { ".jpg", ".jpeg", ".png", ".webp", ".gif" }.Contains(ext1);
                            var isVid1 = new[] { ".mp4", ".mov", ".webm" }.Contains(ext1);
                            var colClass = "col-md-6";
                            var isMid = attCount == 1 ? "justify-content-center" : "";

                            <div class="@colClass @isMid">
                                <div class="ratio ratio-16x9 bg-light rounded overflow-hidden">
                                    @if (isImg1)
                                    {
                                        <!-- CLICK PE POZĂ => TAB NOU -->
                                        <a href="@Model.Att1" target="_blank" rel="noopener noreferrer" class="d-block w-100 h-100">
                                            <img src="@Model.Att1" alt="attachment 1" class="w-100 h-100" style="object-fit: cover;" />
                                        </a>
                                    }
                                    else if (isVid1)
                                    {
                                        <video src="@Model.Att1" class="w-100 h-100" style="object-fit:cover;" controls></video>
                                    }
                                    else
                                    {
                                        <div class="d-flex justify-content-center align-items-center w-100 h-100 text-muted">
                                            Attachment #1
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        @* ATTACHMENT #2 *@
                        @if (!string.IsNullOrEmpty(Model.Att2))
                        {
                            var ext2 = System.IO.Path.GetExtension(Model.Att2).ToLower();
                            var isImg2 = new[] { ".jpg", ".jpeg", ".png", ".webp", ".gif" }.Contains(ext2);
                            var isVid2 = new[] { ".mp4", ".mov", ".webm" }.Contains(ext2);
                            var colClass = "col-md-6"; // attCount == 1 ? "col-12" :
                            var isMid = attCount == 1 ? "justify-content-center" : "";

                            <div class="@colClass @isMid">
                                <div class="ratio ratio-16x9 bg-light rounded overflow-hidden">
                                    @if (isImg2)
                                    {
                                        <!-- CLICK PE POZĂ => TAB NOU -->
                                        <a href="@Model.Att2" target="_blank" rel="noopener noreferrer" class="d-block w-100 h-100">
                                            <img src="@Model.Att2" alt="attachment 2" class="w-100 h-100" style="object-fit: cover;" />
                                        </a>
                                    }
                                    else if (isVid2)
                                    {
                                        <video src="@Model.Att2" class="w-100 h-100" style="object-fit: cover;" controls></video>
                                    }
                                    else
                                    {
                                        <div class="d-flex justify-content-center align-items-center w-100 h-100 text-muted">
                                            Attachment #2
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                    </div>
                }

                <!-- FOOTER: interacțiuni + created at -->
                <div class="d-flex justify-content-between align-items-center mt-2">

                    <div class="small text-muted d-flex align-items-center flex-wrap">
                        <span class="me-3 d-flex align-items-center">
                            <form method="get" asp-controller="Echoes" asp-action="New">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <input type="hidden" name="type" value="@typeComm" />
                                <button type="submit" class="p-0 border-0 text-muted text-decoration-none" style="background: none; cursor: pointer;">
                                    <i class="bi bi-chat me-1"></i> @Model.CommentsCount
                                </button>
                            </form>
                        </span>

                        <span class="me-3 d-flex align-items-center">
                            <form method="post" asp-controller="Interactions" asp-action="New_Rebound" class="d-inline interaction-form" data-echo-id="@Model.Id" data-interaction-type="rebound">
                                <input type="hidden" name="EchoId" value="@Model.Id" />
                                <button type="submit" class="p-0 border-0 text-muted text-decoration-none" style="background: none; cursor: pointer;">
                                    <i class="bi bi-arrow-repeat me-1 rebound-icon @(isRebounded ? "text-success" : "")"></i> <span class="rebound-count">@Model.ReboundCount</span>
                                </button>
                            </form>
                        </span>

                        <span class="me-3 d-flex align-items-center">
                            <form method="get" asp-controller="Echoes" asp-action="New">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <input type="hidden" name="type" value="@typeAmp" />
                                <button type="submit" class="p-0 border-0 text-muted text-decoration-none" style="background: none; cursor: pointer;">
                                    <i class="bi bi-megaphone me-1"></i>
                                    @if (!showButtons || @Model.AmplifierCount == 0)
                                    {
                                        @Model.AmplifierCount
                                    }
                                </button>
                                @if (showButtons && @Model.AmplifierCount != 0)
                                {
                                    <a class="text-muted text-decoration-none link-underline link-underline-opacity-0" asp-controller="Echoes" asp-action="Amplifiers" asp-route-id="@Model.Id">/ <i class="bi bi-clipboard2 me-1"></i> @Model.AmplifierCount</a>
                                }
                            </form>
                        </span>

                        <span class="me-3 d-flex align-items-center">
                            <form method="post" asp-controller="Interactions" asp-action="New_Bookmark" class="d-inline interaction-form" data-echo-id="@Model.Id" data-interaction-type="bookmark">
                                <input type="hidden" name="EchoId" value="@Model.Id" />
                                <button type="submit" class="p-0 border-0 text-muted text-decoration-none" style="background: none; cursor: pointer;">
                                    <i class="bi bookmark-icon @(isBookmarked ? "bi-bookmark-fill text-primary" : "bi-bookmark") me-1"></i> <span class="bookmark-count">@Model.BookmarksCount</span>
                                </button>
                            </form>
                        </span>

                        <span class="me-3 d-flex align-items-center">
                            <form method="post" asp-controller="Interactions" asp-action="New_Like" class="d-inline interaction-form" data-echo-id="@Model.Id" data-interaction-type="like">
                                <input type="hidden" name="EchoId" value="@Model.Id" />
                                <button type="submit" class="p-0 border-0 text-muted text-decoration-none" style="background: none; cursor: pointer;">
                                    <i class="bi like-icon @(isLiked ? "bi-heart-fill text-danger" : "bi-heart") me-1"></i> <span class="like-count">@Model.LikesCount</span>
                                </button>
                            </form>
                        </span>
                    </div>

                    <div class="small text-muted text-end">
                        created at: @Model.DateCreated.ToString("HH:mm") - @Model.DateCreated.ToString("MMM d, yyyy")
                    </div>
                </div>

                @if (User.IsInRole("Admin"))
                {
                    @if (Model.IsRemoved)
                    {
                        <small class="d-flex flex-row mt-3 mb-1 p-3 rounded-3 text-center align-items-center alert alert-secondary text-muted fst-italic">
                            This Echo has been removed.
                        </small>
                    }
                    else if (IsBlocked(Model))
                    {
                        <small class="d-flex flex-row mt-3 mb-1 p-3 rounded-3 text-center align-items-center alert alert-secondary text-muted fst-italic">
                            This Echo was sent from an account that has blocked you.
                        </small>
                    }
                    else if (!CanViewEcho(Model))
                    {
                        <small class="d-flex flex-row mt-3 mb-1 p-3 rounded-3 text-center align-items-center alert alert-secondary text-muted fst-italic">
                            This Echo was sent from a private account you do not follow.
                        </small>
                    }
                }
            </div>
        </div>
    }
</div>
