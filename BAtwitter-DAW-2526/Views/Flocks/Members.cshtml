@model BAtwitter_DAW_2526.Models.Flock

<div class="mt-3">
    @if (ViewBag.Members != null && ((List<BAtwitter_DAW_2526.Models.FlockUser>)ViewBag.Members).Count > 0)
    {
        var membersList = (List<BAtwitter_DAW_2526.Models.FlockUser>)ViewBag.Members;
        var admin = membersList.FirstOrDefault(m => m.UserId == Model.AdminId);
        var regularMembers = membersList.Where(m => m.UserId != Model.AdminId).ToList();
            
        <!-- ADMIN SECTION -->
        @if (admin != null && admin.User != null && admin.User.ApplicationUser != null)
        {
            <h6 class="text-muted mb-3">Admin:</h6>
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            @if (!string.IsNullOrEmpty(admin.User.PfpLink))
                            {
                                <a href="@Url.Action("Show", "UserProfiles", new { username = admin.User.ApplicationUser.UserName })" class="text-decoration-none me-3">
                                    <img src="@admin.User.PfpLink" alt="Profile Picture" class="rounded-circle"
                                            style="width: 64px; height: 64px; object-fit: cover;" />
                                </a>
                            }
                            else
                            {
                                <div class="rounded-circle bg-secondary me-3" style="width: 64px; height: 64px;"></div>
                            }
                            <div>
                                <h5 class="mb-0">
                                    <a href="@Url.Action("Show", "UserProfiles", new { username = admin.User.ApplicationUser.UserName })"
                                        class="text-decoration-none">
                                        @admin.User.DisplayName
                                    </a>
                                    <span class="badge bg-danger ms-2">Admin</span>
                                </h5>
                                <small class="text-muted">@@@admin.User.ApplicationUser.UserName</small>
                                <br />
                                <small class="text-muted">Joined: @admin.JoinDate.ToString("MMM d, yyyy")</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- REGULAR MEMBERS SECTION -->
        @if (regularMembers.Count > 0)
        {
            <h6 class="text-muted mb-3">Members:</h6>
            @foreach (var member in regularMembers)
            {
                @if (member.User != null && member.User.ApplicationUser != null)
                {
                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(member.User.PfpLink))
                                    {
                                        <a href="@Url.Action("Show", "UserProfiles", new { username = member.User.ApplicationUser.UserName })" class="text-decoration-none me-3">
                                            <img src="@member.User.PfpLink" alt="Profile Picture" class="rounded-circle"
                                                    style="width: 64px; height: 64px; object-fit: cover;" />
                                        </a>
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-secondary me-3" style="width: 64px; height: 64px;"></div>
                                    }
                                    <div>
                                        <h5 class="mb-0">
                                            <a href="@Url.Action("Show", "UserProfiles", new { username = member.User.ApplicationUser.UserName })"
                                                class="text-decoration-none">
                                                @member.User.DisplayName
                                            </a>
                                            @if (member.Role == "moderator")
                                            {
                                                <span class="badge bg-warning ms-2">Moderator</span>
                                            }
                                        </h5>
                                        <small class="text-muted">@@@member.User.ApplicationUser.UserName</small>
                                        <br />
                                        <small class="text-muted">Joined: @member.JoinDate.ToString("MMM d, yyyy")</small>
                                    </div>
                                </div>
                                @if (ViewBag.CurrentUser != null && ViewBag.CurrentUser.ToString() == Model.AdminId)
                                {
                                    <form method="post" action="@Url.Action("RemoveMember", "Flocks", new { id = Model.Id, userId = member.UserId })">
                                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#removeModal_@member.UserId">
                                            Remove
                                        </button>

                                        <div class="modal fade" id="removeModal_@member.UserId" tabindex="-1" aria-labelledby="removeModalLabel_@member.UserId" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="removeModalLabel_@member.UserId">Remove Member</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to remove @@@(member.User.ApplicationUser?.UserName) from this flock?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-danger">Remove</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
        }
    }
    else
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <p class="text-muted mb-0">No members found.</p>
            </div>
        </div>
    }
</div>


